<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgUserTarefa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/boy"
                />

            <LinearLayout
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtLstAtvTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtLstAtvDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textMultiLine"
                    android:textSize="12dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/listdone"
                android:onClick="OnClickBtnTarefaFeita"/>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                app:srcCompat="@drawable/listcancel"
                android:onClick="OnClickBtnRejeitarTarefa" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>